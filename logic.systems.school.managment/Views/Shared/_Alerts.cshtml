@{

    <div id="dev_alerts">
        @if (TempData["success"] != null)
        {
            <div class="alert alert-success" role="alert" id="alert_success">
                <strong>Informação:</strong>   @TempData["success"].ToString()
            </div>
        }
        else if (TempData["error"] != null)
        {
            <div class="alert alert-danger" role="alert" id="alert_error">
                <strong>Erro:</strong>  @TempData["error"].ToString()
            </div>
        }
        else if (TempData["warning"] != null)
        {
            <div class="alert alert-warning" role="alert" id="alert_warning">
                <strong>Alerta:</strong>    @TempData["warning"].ToString()
            </div>
        }
    </div>


}


