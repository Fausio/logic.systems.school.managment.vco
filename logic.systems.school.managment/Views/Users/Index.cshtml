@model List<AppUser>

<div class="pageheader ">
    <div class="pd-t-5">
        <h1 class="pd-0 mg-0 tx-20 text-overflow">Utilizadores</h1>
    </div>
</div>



<div class="col-md-12 col-lg-12">
    <div class="card mb-4 shadow-1">
        <div class="card-header">
            <h4 class="card-header-title">
                Utilizadores
            </h4>

        </div>
        <div class="card-body collapse show" id="collapse3">

            <div class="row">
                <div class="col-12">
                    @await Html.PartialAsync("~/Views/Shared/_Alerts.cshtml")
                </div>
            </div>
            <div class="row">
                <table class="table table-hover table-responsive-sm  table-sm">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Email</th>
                            <th>Localização</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th scope="row"><a asp-action="Update" asp-controller="users" asp-route-id="@item.Id"> <i class="fa fa-search" aria-hidden="true"></i> </a></th>
                                <td>@item.UserName</td>
 
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>  