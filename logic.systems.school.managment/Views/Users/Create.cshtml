@model logic.systems.school.managment.Models.RegisterModel
 

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="index" asp-controller="home">Dashboard</a></li>
        <li class="breadcrumb-item active" aria-current="page">CRIAR:  Nova conta</li>
    </ol>
</nav>

<div class="col-12">
    <div class="card mb-4 shadow-1">
        <div class="card-header">
            <h4 class="card-header-title"></h4>
            <div class="card-header-btn">
            </div>
        </div>
        <div class="card-body collapse show" id="collapse1">
            <div class="form-layout form-layout-1">
                <div class="row">
                    <div class="col-12">
                        @await Html.PartialAsync("~/Views/Shared/_Alerts.cshtml")
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <form id="registerForm" method="post">

                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-floating">
                                <label asp-for="Email"></label>
                                <input asp-for="Email" name="Email" class="form-control" aria-required="true" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="form-floating">
                                <label asp-for="Password"></label>
                                <input asp-for="Password" name="Password" class="form-control" aria-required="true" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-floating">
                                <label asp-for="ConfirmPassword"></label>
                                <input asp-for="ConfirmPassword" name="ConfirmPassword" class="form-control" aria-required="true" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                            
                            <fieldset class="border p-2">
                                <legend class="w-auto">Ações</legend>
                                <div class="template-demo">
                                    <button type="submit" class="btn mt-2  btn-sm btn-info btn-icon-text">
                                        Gravar
                                    </button>
                                    <a class="btn  btn-sm btn-light btn-icon-text" href="/users">
                                        Ir para lista
                                    </a>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
