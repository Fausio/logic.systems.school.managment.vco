                            <div class="col-md-4">
                                <form id="registerForm" asp-action="UpdatePassword" method="post">
                                    <input type="hidden" asp-for="PasswordDTO.UserId" name="PasswordDTO.UserId" id="PasswordDTO.UserId" />
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-floating">
                                        <label> Nova senha</label>
                                        <input asp-for="PasswordDTO.NewPassword" name="PasswordDTO.NewPassword" class="form-control form-control-sm " aria-required="true" />
                                        <span asp-validation-for="PasswordDTO.NewPassword" class="text-danger"></span>
                                    </div>
                                    <fieldset class="border p-2">
                                        <legend class="w-auto">Ações</legend>
                                        <div class="template-demo">
                                            <button type="submit" class="btn mt-2  btn-sm btn-info btn-icon-text">
                                                Actualizar
                                                <i class="typcn typcn-edit btn-icon-append"></i>
                                            </button>
                                            <a class="btn  btn-sm btn-light btn-icon-text" href="/users">
                                                Ir para lista
                                            </a>
                                        </div>
                                    </fieldset>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="tab-pane fade" id="navs-top-profile_">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                <form asp-action="UpdateProfile" method="post">
                                    <input type="hidden" asp-for="PasswordDTO.UserId" name="PasswordDTO.UserId" id="PasswordDTO.UserId" />
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-floating">
                                        <label> Perfil </label>
                                        <select asp-for="RoleName" name="RoleName" class="form-control form-control-sm pb-3 pt-3" id="RoleName">
                                            @foreach (IdentityRole item in ViewBag.Roles)
                                            {
                                                <option value="@item.Name">@item.Name</option>
                                            }
                                        </select>
