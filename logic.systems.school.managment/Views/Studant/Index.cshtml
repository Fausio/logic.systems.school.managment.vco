@model logic.systems.school.managment.Dto.PaginationDTO<logic.systems.school.managment.Models.Student>

@{
    ViewData["Title"] = "Estudantes";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="index" asp-controller="home">Dashboard</a></li>
        <li class="breadcrumb-item active" aria-current="page">Lista de Estudantes</li>
    </ol>
</nav>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body pb-0">  
            <div class="row">
                <div class="col-md-10 col-sm-6">
                    <div class="form-group">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Pesquisar estudante pelo nome">
                            <div class="input-group-append">
                                <button class="btn btn-sm btn-light" type="button">Search</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-2 col-sm-6">
                    <a type="button" class="btn btn-info btn-icon-text" asp-action="create" asp-controller="studant">
                        Cadastrar novo estudante
                    </a>
                </div>
            </div>
           
        </div>
    </div>
</div>

    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
        <div class="card-body pb-0">
                <h4 class="card-title">Lista</h4>
                <p class="card-description">   estudantes  </p>
                <div class="table-responsive"> 
                        <table class="table table-hover">

                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Estudante</th>
                                    <th scope="col">Classe</th>
                                    <th scope="col">Turma</th>
                                    <th scope="col">Estado</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model.records)
                            {
                                <tr>
                                     <th scope="row"> @item.Id</th>   
                                    <td> <a asp-action="edit" asp-controller="studant" asp-route-id="@item.Id">
                                        @*     <i class="typcn typcn-compass  text-success"></i> *@
                                        @item.Name </a> </td>
                                    <td>xpto</td>
                                    <td>xpto</td>
                                    <td>   <label class="badge badge-danger">Pending</label></td>
                                </tr>
                            }
                              
                                  
                            </tbody>
                        </table>
                        <hr />
                    <nav aria-label="Page navigation example">
                        <ul class="pagination">
                            <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                            <li class="page-item"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item"><a class="page-link" href="#">Next</a></li>
                        </ul>
                    </nav>
                    


                </div>
            </div>
        </div>
    </div>


     